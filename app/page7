      fill="none"
      strokeLinecap="round"
    />
    <motion.circle cx="40" cy="50" r="3" fill="currentColor" />
    <motion.circle cx="60" cy="30" r="2" fill="currentColor" />
    <motion.path
      d="M40,50 Q35,45 30,40"
      stroke="currentColor"
      strokeWidth="1.5"
      fill="none"
      strokeLinecap="round"
