// Creative animated components
const FloatingShape = ({ children, className, delay = 0 }: { children: React.ReactNode, className?: string, delay?: number }) => (
  <motion.div
    initial={{ y: 0, rotate: 0 }}
    animate={{ 
      y: [-10, 10, -10],
      rotate: [-5, 5, -5]
    }}
    transition={{ 
      duration: 6,
      delay,
      repeat: Infinity,
      ease: "easeInOut"
    }}
    className={className}
  >
    {children}
  </motion.div>
)

const PulsingOrb = ({ color, size = "w-4 h-4", delay = 0 }: { color: string, size?: string, delay?: number }) => (
  <motion.div
    initial={{ scale: 1, opacity: 0.7 }}
    animate={{ scale: [1, 1.2, 1], opacity: [0.7, 1, 0.7] }}
    transition={{ duration: 2, delay, repeat: Infinity }}
    className={`${size} ${color} rounded-full`}
  />
)

